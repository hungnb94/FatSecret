<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/mg_layout"
    android:paddingLeft="@dimen/mg_layout"
    android:paddingRight="@dimen/mg_layout"
    tools:context=".fragment.Welcome7Fragment">


    <TextView
        style="@style/QuestionActivityTitle"
        android:layout_marginBottom="@dimen/mg_layout"
        android:text="@string/date_of_birth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button_click"
            android:padding="@dimen/padding_choice">

            <DatePicker
                android:id="@+id/datePicker"
                style="@style/date_picker_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="@dimen/img_next"
            android:layout_height="@dimen/img_next"
            android:layout_marginTop="@dimen/mg_layout"
            android:background="@drawable/next_page" />

    </LinearLayout>
</LinearLayout>